{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": ["./hardhat.config.ts"],
  "include": [
    "./config/**/*.ts",
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./typechain-types",
    "./deploy"
  ],
  "exclude": ["node_modules"]
}